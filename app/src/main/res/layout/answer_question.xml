    <!-- 开始按钮：不可点击 -->
    <Button
        android:id="@+id/btBegin1"
        android:layout_marginTop="15dp"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="开始"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:state_enabled="false"
        android:background="@drawable/btn_begin_unenable"/>
    <!-- 开始按钮：可点击 -->
    <Button
        android:visibility="gone"
        android:id="@+id/btBegin2"
        android:layout_marginTop="15dp"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="开始"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/btn_begin_enable"/>

    <!--按钮：单题分析 答题详情  结束作答 关闭提问-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btSingle"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="单题分析"
                android:textColor="@color/white"
                android:background="@drawable/btn_begin_enable"/>

            <Button
                android:id="@+id/btAnswers"
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="答题详情"
                android:textColor="@color/white"
                android:background="@drawable/btn_begin_enable"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btEnd"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="结束作答"
                android:textColor="@color/white"
                android:background="@drawable/btn_begin_enable"/>

            <Button
                android:id="@+id/btClosed"
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="关闭提问"
                android:textColor="@color/white"
                android:background="@drawable/btn_begin_enable"/>
        </LinearLayout>
    </LinearLayout>

    <!--计时器-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear2"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/div_shallowgray">
        <Chronometer
            android:id="@+id/id_jishiqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_orange"
            android:textSize="25sp"
            android:text="00:00"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tx_answers_sum"
            android:text="0/60位同学已提交"
            android:textSize="20sp"
            android:textColor="@color/text_gray"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>