<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/div_gray"
    android:orientation="vertical"
    tools:context=".InteractiveAnswerFragment">

    <!--互动类型-->
    <TextView
        android:text="互动类型"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/text_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_tiwen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_tiwen"
            android:gravity="center"
            android:padding="2dp"
            android:text="提问"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_suiji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_suiji"
            android:gravity="center"
            android:padding="2dp"
            android:text="随机"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_qiangda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_qiangda"
            android:gravity="center"
            android:padding="2dp"
            android:text="抢答"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp" />
    </LinearLayout>

    <!--互动模式-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="互动模式"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/text_gray"/>
        <!--android:visibility="gone"-->
        <TextView
            android:id="@+id/txChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="7dp"
            android:layout_toLeftOf="@id/spinner"
            android:text="选项数:"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:entries="@array/data"
            android:spinnerMode="dialog" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/redanxuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgdanxuan"
                android:layout_width="45dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:src="@drawable/tab_menu_danxuan" />

            <TextView
                android:id="@+id/txt_danxuan"
                android:text="单选"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgdanxuan"
                android:layout_marginTop="3dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/redduoxuan"
            android:layout_toRightOf="@+id/redanxuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgduoxuan"
                android:layout_width="45dp"
                android:layout_height="36dp"
                android:src="@drawable/tab_menu_duoxuan"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"/>

            <TextView
                android:id="@+id/txt_duoxuan"
                android:text="多选"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgduoxuan"
                android:layout_marginTop="3dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/repanduan"
            android:layout_toRightOf="@+id/redduoxuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgpanduan"
                android:layout_width="45dp"
                android:layout_height="36dp"
                android:src="@drawable/tab_menu_panduan"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"/>

            <TextView
                android:id="@+id/txt_panduan"
                android:text="判断"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgpanduan"
                android:layout_marginTop="3dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reluru"
            android:layout_toRightOf="@+id/repanduan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgluru"
                android:layout_width="45dp"
                android:layout_height="36dp"
                android:src="@drawable/tab_menu_luru"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"/>

            <TextView
                android:id="@+id/txt_luru"
                android:text="录入"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgluru"
                android:layout_marginTop="3dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
